@{

    Layout = "_LayoutPortal3";
}
@model IEnumerable<TicketWeb.Models.VeMayBay>

@{
    ViewData["Title"] = "Index";
}
<style>
    .header {
        background-color: #1559b6;
        text-align: center;
        padding: 5px;
        border-bottom: 2px ridge #ffffff;
        font-size: 30px;
        color: azure;
        font-family: sans-serif;
    }
    .btn_add {
        border-radius: 5px;
        color: #ffffff;
        background-color: #4cff00;
        padding: 10px;
    }
    body {
        background-image: url("https://img2.thuthuatphanmem.vn/uploads/2019/03/02/hinh-nen-powerpoint-xanh-duong-cuc-dep_012324053.jpeg");
        line-height:3.5;
    }
</style>
<head>
    <title>Quản Lý Vé Máy Bay</title>
    <div class="header">
        <a href="/Admin" style="color:#ffffff">Admin</a>
        <h1 class="head-title">QUẢN LÝ VÉ MÁY BAY</h1>
    </div>
</head>

<p style="text-align:left";>
    <a class="btn_add" asp-action="Create">Thêm vé máy bay</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChuyenBay_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenKhach)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgaySinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NguoiDat_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiaVe)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChuyenBay_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenKhach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NguoiDat_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaVe)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ID })
            </td>
        </tr>
        }
    </tbody>
</table>
