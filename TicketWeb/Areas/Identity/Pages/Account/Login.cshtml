@page "/login/"
@model LoginModel
@{
    Layout = "_LayoutPortal";
    ViewData["Title"] = "ĐĂNG NHẬP";
}
<style>
    body {
        font-family: Arial;
        font-size: 17px;
        padding: 8px;
        background-image: url("https://images.wallpaperscraft.com/image/plane_sky_boeing_clouds_68146_1600x900.jpg" );
    }

    .form_input {
        padding: 8px 20px;
        margin: 24px -20px;
        box-shadow: none !important;
        background-color: #fff;
        border-radius: 5px;
        margin: auto;
    }

    .input {
        width: 320%;
        padding: 1px 0px;
        border: 1px solid #dedede;
        font-size: 20px;
        color: rgb(36, 36, 36);
        outline: none;
        border-radius: 3px;
    }

        .input:focus {
            border-color: #1dbfaf;
            box-shadow: inset 0 1px 1px rgba(0, 0, 0,8%), 0 0 8px rgba(29, 191, 175, 60%)
        }

    .btn-group {
        display: flex;
        justify-content: space-between;
    }

    .btn_them {
        text-align: center;
        color: red;
        display: inline-block;
        border-radius: 8px;
        border: 2px solid red;
    }

        .btn_them:hover {
            color: #fff;
            background-color: red;
            border: 2px solid transparent;
        }

    .btn_back {
        text-align: center;
        /* padding: 10px; */
        color: deepskyblue;
        border-radius: 8px;
        border: 2px solid deepskyblue;
        padding: 1px 5px 0 5px;
    }

        .btn_back:hover {
            color: #fff;
            background-color: deepskyblue;
            border: 2px solid transparent;
            text-decoration: none;
        }

        .btn_back a:hover {
            text-decoration: none;
            color: #fff;
        }

        .btn_back a {
            color: deepskyblue;
        }

    .formLogin {
        margin: 0 auto;
    }
</style>
<div class="col-md-4 formLogin">
    <div class="form_input">
        <section>
            <form id="account" method="post">
                <h4>Đăng Nhập</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Đăng nhập</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Bạn quên mật khẩu?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Chưa có tài khoản, đăng ký mới</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>
@*</div>*@

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}